<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
>
	<LinearLayout
	    android:id="@+id/main_menu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="vertical"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="80dp"
        android:rotation="338"
	>
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@mipmap/menu_user"
	        android:onClick="onClickUser"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@mipmap/menu_invite"
	        android:onClick="onClickListInvite"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@mipmap/menu_player"
	        android:onClick="onClickListPlayer"
	    />
	    <ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="20dp"
		    android:src="@mipmap/menu_statistic"
	        android:onClick="onClickListStatistic"
	    />
	</LinearLayout>
		<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="bottom"
	>
	    <ImageView
	        android:id="@+id/iv_play"
	        android:layout_width="107dp"
	        android:layout_height="32dp"
		    android:layout_marginBottom="125dp"
		    android:layout_marginLeft="89dp"
		    android:rotation="68"
	        android:src="@mipmap/menu_play"
	        android:onClick="onClickListPlayerInvite"
	    />
	    <ImageView
	        android:id="@+id/iv_match"
	        android:layout_width="140dp"
	        android:layout_height="32dp"
		    android:layout_marginBottom="140dp"
		    android:layout_marginLeft="66dp"
		    android:rotation="68"
	        android:src="@mipmap/menu_match"
	        android:onClick="onClickMatch"
	    />
	</LinearLayout>
</RelativeLayout>
