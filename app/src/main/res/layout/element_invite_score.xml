<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ll_score"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:minHeight="@dimen/layout_card_view_height"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/iv_score"
		android:layout_width="@dimen/icon_medium_horizontal_size"
		android:layout_height="@dimen/icon_medium_horizontal_size"
		android:layout_gravity="center_horizontal|center_vertical"
		android:layout_marginBottom="@dimen/icon_vertical_margin"
		android:layout_marginEnd="@dimen/icon_horizontal_margin"
		android:layout_marginStart="@dimen/icon_horizontal_margin"
		android:layout_marginTop="@dimen/icon_vertical_margin"
		android:src="@drawable/ic_score_10" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/list_item_vertical_margin"
		android:layout_weight="1"
		android:paddingBottom="2dp"
		android:orientation="vertical">


		<EditText
			android:id="@+id/et_score"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:focusable="false"
			android:inputType="none"
			android:textSize="@dimen/player_field_size"
			android:hint="@string/txt_score"
			android:background="@null" />

	</LinearLayout>
</LinearLayout>
