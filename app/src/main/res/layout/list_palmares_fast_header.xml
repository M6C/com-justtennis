<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/list_item_vertical_margin"
    android:background="?attr/customLayoutBackgroundColor"
    android:orientation="horizontal"
>
		<TextView
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".34"
		    android:textSize="22sp"
		    android:textColor="?attr/customHeaderTextColor"
		    android:text="@string/txt_ranking"
		/>
		<TextView
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".33"
		    android:gravity="center_horizontal"
		    android:textSize="22sp"
		    android:textColor="?attr/customHeaderTextColor"
		    android:text="@string/txt_victory"
		/>
		<TextView
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".33"
		    android:gravity="center_horizontal"
		    android:textSize="22sp"
		    android:textColor="?attr/customHeaderTextColor"
		    android:text="@string/txt_defeat"
		/>
</LinearLayout>