<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/list_item_vertical_margin"
	android:paddingLeft="@dimen/list_item_horizontal_margin"
	android:paddingRight="@dimen/list_item_horizontal_margin"
	android:paddingTop="@dimen/list_item_vertical_margin"
	android:background="@color/list_item_background_color"
	android:layout_margin="@dimen/list_item_margin"
	android:orientation="vertical"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal"
		>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			>
			<ImageView
				android:id="@+id/iv_player"
				android:layout_width="@dimen/icon_list_item_horizontal_size"
				android:layout_height="@dimen/icon_list_item_status_vertical_size"
				android:layout_gravity="center_vertical|center_horizontal"
				android:contentDescription="@string/button_desctiption_player_unknow"
				android:src="@drawable/player_unknow" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginStart="8sp"
			android:layout_marginEnd="8sp"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			>
			<com.google.android.flexbox.FlexboxLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				app:flexWrap="wrap"
				app:flexDirection="row"
				app:alignItems="stretch"
				app:alignContent="stretch"
				>
				<TextView
					android:id="@+id/tv_player"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="10sp"
					android:textAppearance="?attr/customTextAppearanceTitle"
					android:orientation="vertical"
					android:maxLines="1"
					android:ellipsize="end"
					android:text="Player Name"
					/>

				<LinearLayout
					android:id="@+id/ll_ranking"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
					app:layout_alignSelf="stretch">

					<ImageView
						android:id="@+id/iv_ranking"
						android:layout_width="@dimen/icon_small_horizontal_size"
						android:layout_height="@dimen/icon_small_vertical_size"
						android:layout_gravity="center_horizontal|center_vertical"
						android:src="@drawable/ic_award_small" />

					<TextView
						android:id="@+id/tv_ranking"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="2sp"
						android:layout_marginEnd="8sp"
						android:textAppearance="?attr/customTextAppearanceListItem"
						android:text="NC"
						/>
					<TextView
						android:id="@+id/tv_ranking_estimate"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textAppearance="?attr/customTextAppearanceListItem"
						android:text="15"
						/>
				</LinearLayout>
			</com.google.android.flexbox.FlexboxLayout>

			<LinearLayout
				android:id="@+id/ll_club_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:orientation="horizontal"
				android:gravity="center_horizontal|center_vertical">
				<ImageView
					android:id="@+id/iv_location_map"
					android:layout_width="@dimen/icon_small_horizontal_size"
					android:layout_height="@dimen/icon_small_vertical_size"
					android:layout_gravity="center_horizontal|center_vertical"
					android:src="@drawable/ic_marker_location_08_small" />

				<TextView
					android:id="@+id/tv_club_name"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginStart="2sp"
					android:textAppearance="?attr/customTextAppearanceListItem"
					android:text="Club Name"
					/>
			</LinearLayout>
		</LinearLayout>

		<!--<View-->
		<!--android:id="@+id/divider"-->
		<!--android:layout_width="1dp"-->
		<!--android:layout_height="match_parent"-->
		<!--android:layout_marginEnd="@dimen/separator_horizontal_margin"-->
		<!--android:layout_marginStart="@dimen/separator_horizontal_margin"-->
		<!--android:background="?android:attr/listDivider" />-->

		<LinearLayout
			android:id="@+id/ll_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:padding="5dp"
			android:gravity="center_vertical|center_horizontal"
			>
			<ImageView
				android:id="@+id/iv_delete"
				android:layout_width="30dip"
				android:layout_height="30dip"
				android:src="@android:drawable/ic_menu_delete"
				android:contentDescription="@string/button_desctiption_delete"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>