<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="@dimen/layout_card_view_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_location_map"
        android:layout_width="@dimen/icon_medium_horizontal_size"
        android:layout_height="@dimen/icon_medium_horizontal_size"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="@dimen/icon_vertical_margin"
        android:layout_marginEnd="@dimen/icon_horizontal_margin"
        android:layout_marginStart="@dimen/icon_horizontal_margin"
        android:layout_marginTop="@dimen/icon_vertical_margin"
        android:src="@drawable/ic_marker_location_08" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_vertical_margin"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_location_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/invite_field_size_small_1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_location_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 1"
                android:textSize="@dimen/invite_field_size_small_2" />

            <TextView
                android:id="@+id/tv_location_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line 2"
                android:textSize="@dimen/invite_field_size_small_2" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:inputType="none"
            android:textColor="?android:textColorHint"
            android:textSize="@dimen/player_field_size"
            android:visibility="gone"
            android:background="@null"/>

    </LinearLayout>
</LinearLayout>