<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/list_item_vertical_margin"
	android:paddingLeft="@dimen/list_item_horizontal_margin"
	android:paddingRight="@dimen/list_item_horizontal_margin"
	android:paddingTop="@dimen/list_item_vertical_margin"
	android:background="@color/list_item_background_color"
	android:layout_margin="@dimen/list_item_margin"
	android:orientation="horizontal"
	>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginStart="8sp"
		android:layout_marginEnd="8sp"
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		>
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?attr/customTextAppearanceListItemTitle"
			android:orientation="vertical"
			android:maxLines="1"
			android:ellipsize="end"
			android:text="Club Name"
			/>

		<LinearLayout
			android:id="@+id/ll_club_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/iv_location_map"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:src="@drawable/ic_marker_location_08_small" />

			<TextView
				android:id="@+id/tv_club_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="2sp"
				android:textAppearance="?attr/customTextAppearanceListItem"
				android:text="Club Name"
				/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:padding="5dp"
		android:gravity="center_vertical|center_horizontal"
		>
		<ImageView
			android:id="@+id/iv_delete"
			android:layout_width="30dip"
			android:layout_height="30dip"
			android:src="@android:drawable/ic_menu_delete"
			android:contentDescription="@string/button_desctiption_delete"
			/>
	</LinearLayout>
</LinearLayout>