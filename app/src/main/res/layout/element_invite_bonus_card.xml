<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bonus_point_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/app_card_elevation"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/layout_card_view_height"
        android:orientation="horizontal">

        <include layout="@layout/element_invite_bonus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:id="@+id/v_card_color_1"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/rouge_transparent_6" />

    </LinearLayout>
</android.support.v7.widget.CardView>
