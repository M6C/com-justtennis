<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ll_date"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:minHeight="@dimen/layout_card_view_height"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/iv_date"
		android:layout_width="@dimen/icon_medium_horizontal_size"
		android:layout_height="@dimen/icon_medium_horizontal_size"
		android:layout_gravity="center_horizontal|center_vertical"
		android:layout_marginBottom="@dimen/icon_vertical_margin"
		android:layout_marginEnd="@dimen/icon_horizontal_margin"
		android:layout_marginStart="@dimen/icon_horizontal_margin"
		android:layout_marginTop="@dimen/icon_vertical_margin"
		android:src="@drawable/ic_clock_06" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/list_item_vertical_margin"
		android:layout_weight="1"
		android:paddingBottom="2dp"
		android:orientation="vertical">

		<Switch
			android:id="@+id/sw_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textOn="@string/invite_type_text_entrainement"
			android:textOff="@string/invite_type_text_match"
			android:textSize="@dimen/invite_field_size"
			android:visibility="gone"/>

		<EditText
			android:id="@+id/inviteDate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:inputType="none"
			android:gravity="center_vertical|center_horizontal" />

		<EditText
			android:id="@+id/inviteTime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:inputType="none"
			android:gravity="center_vertical|center_horizontal"
			android:background="@null"
			/>

	</LinearLayout>
</LinearLayout>