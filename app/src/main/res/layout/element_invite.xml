<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		>
		<ImageView
			android:id="@+id/iv_status"
			android:layout_width="@dimen/icon_list_item_horizontal_size"
			android:layout_height="@dimen/icon_list_item_status_vertical_size"
			android:layout_gravity="center_vertical|center_horizontal"
			android:contentDescription="@string/button_desctiption_player_unknow"
			android:src="@drawable/ic_tennis_ball_02" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:layout_marginStart="8sp"
		android:layout_marginEnd="8sp"
        android:orientation="vertical"
    >
		<com.google.android.flexbox.FlexboxLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:flexWrap="wrap"
			app:flexDirection="row"
			app:alignItems="stretch"
			app:alignContent="stretch"
			>
			<TextView
				android:id="@+id/tv_player"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10sp"
				android:textSize="22sp"
				android:orientation="vertical"
				android:maxLines="1"
				android:ellipsize="end"
				/>

			<LinearLayout
				android:id="@+id/ll_ranking"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_horizontal|center_vertical"
				app:layout_alignSelf="stretch">

				<ImageView
					android:id="@+id/iv_ranking"
					android:layout_width="@dimen/icon_small_horizontal_size"
					android:layout_height="@dimen/icon_small_vertical_size"
					android:layout_gravity="center_horizontal|center_vertical"
					android:src="@drawable/ic_award_small" />

				<TextView
					android:id="@+id/tv_ranking"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="2sp"
					android:layout_marginEnd="8sp"
					android:textSize="18sp"
					/>
				<TextView
					android:id="@+id/tv_ranking_estimate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="18sp"
					/>
			</LinearLayout>
		</com.google.android.flexbox.FlexboxLayout>

		<LinearLayout
			android:id="@+id/ll_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical" >
			<ImageView
				android:id="@+id/iv_date"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:src="@drawable/ic_clock_06_small" />

			<TextView
				android:id="@+id/tv_date"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="2sp"
				android:textColor="@color/gris_1"
				android:textSize="18sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_club_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical">
			<ImageView
				android:id="@+id/iv_location_map"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:src="@drawable/ic_marker_location_08_small" />

			<TextView
				android:id="@+id/tv_club_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="2sp"
				android:textSize="16sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_score"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical">
			<ImageView
				android:id="@+id/iv_score"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:src="@drawable/ic_score_10_small" />

			<TextView
				android:id="@+id/tv_score"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginStart="2sp"
				android:textColor="@color/gris_1"
				android:textSize="18sp"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>