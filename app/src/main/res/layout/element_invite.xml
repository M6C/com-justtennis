<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		>
		<ImageView
			android:id="@+id/iv_status"
			android:layout_width="35dip"
			android:layout_height="35dip"
			android:layout_gravity="center_vertical|center_horizontal"
			android:contentDescription="@string/button_desctiption_player_unknow"
			android:src="@drawable/ic_tennis_ball_02" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:layout_marginStart="8sp"
		android:layout_marginEnd="8sp"
        android:orientation="vertical"
    >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="2sp"
			android:layout_marginRight="2sp"
			>
			<TextView
				android:id="@+id/tv_player"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="22dp"
				android:text="Name"
				android:orientation="vertical"
				/>

			<LinearLayout
				android:id="@+id/ll_ranking"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="2sp"
				android:layout_marginRight="2sp"
				android:orientation="horizontal"
				android:gravity="center_horizontal|center_vertical">

				<ImageView
					android:id="@+id/iv_ranking"
					android:layout_width="@dimen/icon_small_horizontal_size"
					android:layout_height="@dimen/icon_small_vertical_size"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_marginBottom="@dimen/icon_vertical_margin"
					android:layout_marginEnd="@dimen/icon_horizontal_margin"
					android:layout_marginStart="@dimen/icon_horizontal_margin"
					android:layout_marginTop="@dimen/icon_vertical_margin"
					android:src="@drawable/ic_award" />

				<TextView
					android:id="@+id/tv_ranking"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8sp"
					android:textSize="18sp"
					/>
				<TextView
					android:id="@+id/tv_ranking_estimate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textSize="18sp"
					/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_club_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2sp"
			android:layout_marginRight="2sp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical">
			<ImageView
				android:id="@+id/iv_location_map"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginBottom="@dimen/icon_vertical_margin"
				android:layout_marginEnd="@dimen/icon_horizontal_margin"
				android:layout_marginStart="@dimen/icon_horizontal_margin"
				android:layout_marginTop="@dimen/icon_vertical_margin"
				android:src="@drawable/ic_marker_location_08" />

			<TextView
				android:id="@+id/tv_club_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="16sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2sp"
			android:layout_marginRight="2sp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical" >
			<ImageView
				android:id="@+id/iv_date"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginBottom="@dimen/icon_vertical_margin"
				android:layout_marginEnd="@dimen/icon_horizontal_margin"
				android:layout_marginStart="@dimen/icon_horizontal_margin"
				android:layout_marginTop="@dimen/icon_vertical_margin"
				android:src="@drawable/ic_clock_06" />

			<TextView
				android:id="@+id/tv_date"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/gris_1"
				android:textSize="16sp"
				/>
		</LinearLayout>


		<LinearLayout
			android:id="@+id/ll_score"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2sp"
			android:layout_marginRight="2sp"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical">
			<ImageView
				android:id="@+id/iv_score"
				android:layout_width="@dimen/icon_small_horizontal_size"
				android:layout_height="@dimen/icon_small_vertical_size"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginBottom="@dimen/icon_vertical_margin"
				android:layout_marginEnd="@dimen/icon_horizontal_margin"
				android:layout_marginStart="@dimen/icon_horizontal_margin"
				android:layout_marginTop="@dimen/icon_vertical_margin"
				android:src="@drawable/ic_score_10" />

			<TextView
				android:id="@+id/tv_score"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@color/gris_1"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>