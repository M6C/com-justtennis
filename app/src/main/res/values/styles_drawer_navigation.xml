<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Component - NavBar -->
    <style name="AppComponentNavBar">
        <item name="android:background">@color/app_gris_fonce</item>
        <item name="itemIconTint">@color/app_gris_clair</item>
        <item name="itemBackground">@drawable/view_item_background_drawer_navigation</item>
        <item name="itemTextColor">@color/app_gris_clair</item>
        <item name="itemTextAppearance">@style/AppNavBarTextAppearance</item>
    </style>
    <style name="AppComponentNavBarHeader" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/app_gris_noir</item>
    </style>
    <style name="AppTextAppearanceNavBar" parent="android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_gris_clair</item>
    </style>
    <style name="AppNavBarTextAppearance" parent="android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppNavBarSpinnerSaison" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textAppearance">@style/AppNavBarTextAppearance</item>
    </style>
</resources>