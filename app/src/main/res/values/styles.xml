<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme2" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!-- 
	    <item name="android:spinnerStyle">@style/SpinnerStyle</item>
	    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
	    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item> -->
 -->
        <item name="android:buttonStyle">@style/StyleButton</item>
        <item name="buttonStyleAccent">@style/StyleButtonAccent</item>
        <!-- <item name="customLayoutBackgroundColor">@color/bleu_transparent_6</item> -->
        <item name="customLayoutBackgroundColor">@color/bleu_2_transparent_6</item>
        <item name="customHeaderTextColor">@color/blanc</item>
        <item name="customTextViewHintTextAppearance">@style/AppTextViewHintTextAppearance</item>

        <item name="customListPlayerDrawable">@array/list_ic_tennis_player</item>

        <!-- Component - NavBar -->
        <item name="styleNavBar">@style/AppComponentNavBar</item>
        <item name="styleNavBarHeader">@style/AppComponentNavBarHeader</item>
        <item name="textAppearanceNavBarTitle">@style/AppTextAppearanceNavBar</item>
        <item name="styleSpinnerSaison">@style/AppNavBarSpinnerSaison</item>

        <item name="customTextAppearanceDefault">@style/AppTextAppearanceDefault</item>
        <item name="customTextAppearanceTitle">@style/AppTextAppearanceTitle</item>
        <item name="customTextAppearanceListItem">@style/AppTextAppearanceListItem</item>
        <item name="customTextAppearanceListItemTitle">@style/AppTextAppearanceListItemTitle</item>
        <item name="customTextAppearanceField">@style/AppTextAppearanceField</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Competition">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
	</style>
    
    <!-- Application theme. -->
    <style name="SpinnerStyleNormal">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	    <item name="android:spinnerStyle">@style/SpinnerStyle</item>
	    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
	    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item> -->
    </style>

    <style name="StyleButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="StyleButtonAccent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">19sp</item>
    </style>

	<style name="StyleButton.Competition">
        <item name="android:background">@color/button_background_color_orange</item>
	</style>

    <style name="SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/AppTextAppearanceNavBar</item>
    </style>

    <style name="AppTextViewHintTextAppearance">
        <!--android:textAppearance="@style/Widget.Design.TextInputLayout"-->
        <!--android:textAppearance="@style/TextAppearance.Design.Hint"-->
        <item name="android:textAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>