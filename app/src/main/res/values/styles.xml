<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme2" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
<!-- 
	    <item name="android:spinnerStyle">@style/SpinnerStyle</item>
	    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
	    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item> -->
 -->
        <item name="android:buttonStyle">@style/StyleButton</item>
        <item name="buttonStyleAccent">@style/StyleButtonAccent</item>
        <!-- <item name="customLayoutBackgroundColor">@color/bleu_transparent_6</item> -->
        <item name="customLayoutBackgroundColor">@color/bleu_2_transparent_6</item>
        <item name="customHeaderTextColor">@color/blanc</item>

        <!-- Component - NavBar -->
        <item name="styleNavBar">@style/AppComponentNavBar</item>
        <item name="styleNavBarHeader">@style/AppComponentNavBarHeader</item>
        <item name="textAppearanceNavBarTitle">@style/AppTextAppearanceNavBar</item>
        <item name="styleSpinnerSaison">@style/AppNavBarSpinnerSaison</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Competition" parent="AppBaseTheme">
	    <item name="android:buttonStyle">@style/StyleButton.Competition</item>
        <item name="customLayoutBackgroundColor">@color/orange_transparent_6</item>
        <item name="customHeaderTextColor">@color/blanc</item>
	</style>
    
    <!-- Application theme. -->
    <style name="SpinnerStyleNormal">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	    <item name="android:spinnerStyle">@style/SpinnerStyle</item>
	    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
	    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item> -->
    </style>

    <style name="StyleButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="StyleButtonAccent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">19sp</item>
    </style>

	<style name="StyleButton.Competition">
        <item name="android:background">@color/button_background_color_orange</item>
	</style>
</resources>