<resources
    xmlns:tools="http://schemas.android.com/tools">

    <dimen name="nav_header_vertical_spacing">8dp</dimen>
    <dimen name="nav_header_vertical_small_spacing">4dp</dimen>
    <dimen name="nav_header_height">176dp</dimen>
    <dimen name="nav_header_image_width">@dimen/icon_large_horizontal_size</dimen>
    <dimen name="nav_header_image_height">@dimen/icon_large_vertical_size</dimen>

    <!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
	     https://developer.android.com/design/patterns/navigation-drawer.html -->
    <dimen name="navigation_drawer_width">240dp</dimen>

    <!-- Override navigation drawer padding to reduce padding between multiple NavigationView (drawer_ui_main) -->
    <dimen tools:override="true" name="design_navigation_separator_vertical_padding">0dp</dimen>
    <dimen tools:override="true" name="design_navigation_padding_bottom">0dp</dimen>
</resources>