<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="right|bottom"
>
    
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="48dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    android:background="@color/bleu_clair_1"
		>
<!-- 		    android:alpha=".5" -->
			<LinearLayout
			    android:id="@+id/ll_type_training"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight=".5"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/bleu_transparent_3"
			>
				<LinearLayout
				    android:id="@+id/ll_type_training_cursor"
				    android:layout_width="match_parent"
				    android:layout_height="5dp"
				    android:orientation="horizontal"
				    android:background="@color/bleu_transparent_5"
				/>
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:gravity="center_vertical|center_horizontal"
				    android:text="@string/button_training"
					android:textStyle="bold"
					android:textColor="@color/white"
				/>
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/ll_type_match"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight=".5"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    android:background="@color/orange_pumpkin_transparent_3"
			>
				<LinearLayout
				    android:id="@+id/ll_type_match_cursor"
				    android:layout_width="match_parent"
				    android:layout_height="5dp"
				    android:orientation="horizontal"
				    android:background="@color/orange_tangelo"
				/>
				<TextView
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:gravity="center_vertical|center_horizontal"
				    android:text="@string/button_competition"
					android:textStyle="bold"
					android:textColor="@color/white"
				/>
			</LinearLayout>
		</LinearLayout>
</LinearLayout>