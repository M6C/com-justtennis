<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>
	<RelativeLayout
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:background="@drawable/background_01"
	>
		<LinearLayout
		    android:id="@+id/main_menu"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:orientation="vertical"
		    android:layout_marginTop="60dp"
		    android:layout_marginLeft="80dp"
	        android:rotation="338"
		>
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:paddingBottom="20dp"
			    android:src="@drawable/menu_user"
		        android:onClick="onClickUser"
		    />
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:paddingBottom="20dp"
			    android:src="@drawable/menu_invite"
		        android:onClick="onClickListInvite"
		    />
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:paddingBottom="20dp"
			    android:src="@drawable/menu_player"
		        android:onClick="onClickListPlayer"
		    />
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:paddingBottom="20dp"
			    android:src="@drawable/menu_statistic"
		        android:onClick="onClickListStatistic"
		    />
		</LinearLayout>
 		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="bottom"
		>
		    <ImageView
		        android:id="@+id/iv_play"
		        android:layout_width="107dp"
		        android:layout_height="32dp"
			    android:layout_marginBottom="125dp"
			    android:layout_marginLeft="89dp"
			    android:rotation="68"
		        android:src="@drawable/menu_play"
		        android:onClick="onClickListPlayerInvite"
		    />
		    <ImageView
		        android:id="@+id/iv_match"
		        android:layout_width="140dp"
		        android:layout_height="32dp"
			    android:layout_marginBottom="140dp"
			    android:layout_marginLeft="66dp"
			    android:rotation="68"
		        android:src="@drawable/menu_match"
		        android:onClick="onClickMatch"
		    />
		</LinearLayout>
	</RelativeLayout>
	<fragment
        android:id="@+id/navigation_drawer"
        android:name="com.justtennis.fragment.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</android.support.v4.widget.DrawerLayout>
